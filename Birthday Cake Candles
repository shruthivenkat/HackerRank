//Colleen is having a birthday! She will have a cake with one candle for each year of her age. When she blows out the candles, sheâ€™ll only be able to blow out the tallest ones.
//Find and print the number of candles she can successfully blow out.
#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int birthdayCakeCandles(int n, int ar_size, int* ar) {
    // Complete this function
    int i,val=0,count=0;
    for(i=0;i<ar_size;i++)
    {
        if(ar[i]>ar[i+1])
        {
            val=ar[i];
        }
    }    
    for(i=0;i<ar_size;i++)
    {
        if(ar[i]==val)
            count++;
    }
    return count;
}
int main() {
    int n; 
    scanf("%i", &n);
    int *ar = malloc(sizeof(int) * n);
    for(int ar_i = 0; ar_i < n; ar_i++){
       scanf("%i",&ar[ar_i]);
    }
    int result = birthdayCakeCandles(n, n, ar);
    printf("%d\n", result);
    return 0;
}
